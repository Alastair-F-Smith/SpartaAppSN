        <script><![CDATA[(function executeRule(current, previous /*null when async*/ ) {
	gs.info("Checking course size...");
    try {
        var MAX_COURSE_SIZE = 2;
		var courseId = current.x_1535645_sparta_a_courses;

        var studentsEnrolled = new global.GlideQuery("x_1535645_sparta_a_m2m_x_1535645_sp_x_1535645_sp")
			.where("x_1535645_sparta_a_courses", courseId)
            .count();

        gs.info("There are " + studentsEnrolled + " students enrolled in course " + courseId.getDisplayValue());

        var isFull = studentsEnrolled >= MAX_COURSE_SIZE;

		gs.info("Setting the 'Is Full' flag to " + isFull + "...");

        new global.GlideQuery("x_1535645_sparta_a_courses")
            .where("sys_id", courseId)
            .update({is_full: isFull});
    } catch (err) {
        gs.error("Error occurred in Check if Full: " + err);
    }

})(current, previous);]]></script>
